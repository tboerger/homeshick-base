if [ $LNX ]; then
  alias netstat="sudo netstat -tulpen"
  alias ls="ls --color=auto"
fi

if [ $OSX ]; then
  alias netstat="sudo lsof -i -P"
  alias ls="ls -G"
fi

alias lsa="ls -lah"
alias l="ls -la"
alias ll="ls -alFh"

alias ..="cd .."
alias ...="cd ../.."

alias rgrep="grep -Rn"
alias history="fc -l 1"

alias git="hub"
alias gti="git"
alias gs="git status"
alias gc="git commit"
alias gp="git push"
alias be="bundle exec"

command -v colordiff >/dev/null 2>&1 && alias diff="colordiff -u"
command -v htop >/dev/null 2>&1 && alias top="htop"
command -v zypper >/dev/null 2>&1 && alias zypper="sudo zypper"
command -v osc >/dev/null 2>&1 && alias isc="osc -A i"

command -v irssi >/dev/null 2>&1 && alias irssi="screen -c ~/.irssi/screenrc -S irssi irssi"
command -v centerim >/dev/null 2>&1 && alias centerim="screen -c ~/.irssi/screenrc -S irssi centerim5"
