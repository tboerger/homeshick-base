function ncput {
  if [ $# -ne 2 ]; then
    echo "Usage: ncput <files> <ip>"
    return 1
  fi

  tar -cv $1 | nc $2 1337;
}

function ncget {
  if [ $# -ne 1 ]; then
    echo "Usage: ncget <destination>"
    return 1
  fi

  nc -l -p 1337 | tar -C $@ -xv;
}

codeclimate() {
  exec docker run -ti --rm \
    --env CODE_PATH=$PWD \
    --volume $PWD:/code \
    --volume /var/run/docker.sock:/var/run/docker.sock \
    --volume /tmp/cc:/tmp/cc \
    codeclimate/codeclimate $@
}
