function ncput {
  if [ $# -ne 2 ]; then
    echo "Usage: ncput <files> <ip>"
    return 1
  fi

  tar -cv $1 | nc $2 1337;
}

function ncget {
  if [ $# -ne 1 ]; then
    echo "Usage: ncget <destination>"
    return 1
  fi

  nc -l -p 1337 | tar -C $@ -xv;
}

function random-password {
  local LENGTH=${1:-24}
  openssl rand -base64 $((2*${LENGTH})) | tr -cd '[:alnum:]' | head -c ${LENGTH}
}
