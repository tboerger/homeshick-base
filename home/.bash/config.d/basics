alias lsa="ls -lahi"
alias l="ls -la"
alias ll="ls -alFh"

alias ..="cd .."
alias ...="cd ../.."

alias rgrep="grep -Rn"
alias history="fc -l 1"

alias git="hub"
alias gti="git"
alias gs="git status"
alias status="git status"
alias gc="git commit"
alias commit="git commit"
alias gp="git push"
alias push="git push"
alias pull="git pull"
alias be="bundle exec"

if hash htop 2> /dev/null
then
  alias top="htop"
fi

if hash colordiff 2> /dev/null
then
  alias diff="colordiff -u"
fi
