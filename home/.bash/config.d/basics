alias grep="/usr/bin/grep --color=auto --exclude={.bzr,.cvs,.git,.hg,.svn}"
unset GREP_OPTIONS

alias lsa="ls -lahi"
alias l="ls -la"
alias ll="ls -alFh"

alias sslconnect="openssl s_client -connect"
alias certinfo="openssl x509 -text -in"

alias ..="cd .."
alias ...="cd ../.."

alias rgrep="grep -Rn"
alias history="fc -l 1"

alias gs="git status"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"

alias status="git status"
alias commit="git commit"
alias push="git push"
alias pull="git pull"

alias be="bundle exec"

if hash hub 2> /dev/null
then
  alias git="hub"
fi

if hash htop 2> /dev/null
then
  alias top="htop"
fi

if hash colordiff 2> /dev/null
then
  alias diff="colordiff -u"
fi

if hash irssi 2> /dev/null
then
  alias irssi="screen -d -xRR -c ~/.irssi/screenrc -S irssi irssi"
fi

function week() {
  if [ $# -ne 1 ]; then
    date +%W
  else
    date -d "${1}" +%W
  fi
}

function rails() {
  if [ -f Gemfile ]
  then
    bundle exec rails $@
  else
    command rails $@
  fi
}

function cap() {
  if [ -f Gemfile ]
  then
    bundle exec cap $@
  else
    command cap $@
  fi
}

function rake() {
  if [ -f Gemfile ]
  then
    bundle exec rake $@
  else
    command rake $@
  fi
}
