alias grep="command grep --color=auto"
unset GREP_OPTIONS

alias lsa="ls -lahi"
alias l="ls -la"
alias ll="ls -alFh"

alias sslconnect="openssl s_client -connect"
alias certinfo="openssl x509 -text -in"

alias ..="cd .."
alias ...="cd ../.."

alias rgrep="grep -Rn"
alias history="fc -l 1"

alias gs="git status"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"

alias status="git status"
alias commit="git commit"
alias push="git push"
alias pull="git pull"

if hash vim 2> /dev/null
then
  alias vi="vim"
fi

if hash hub 2> /dev/null
then
  alias git="hub"
fi

if hash htop 2> /dev/null
then
  alias top="htop"
fi

if hash colordiff 2> /dev/null
then
  alias diff="colordiff -u"
fi

if hash irssi 2> /dev/null
then
  function irssi() {
    if ! tmux attach -t irssi 2> /dev/null
    then
      tmux new -s irssi irssi
    fi
  }
fi
