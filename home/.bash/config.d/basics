alias lsa="ls -lahi"
alias l="ls -la"
alias ll="ls -alFh"

alias sslconnect="openssl s_client -connect"
alias certinfo="openssl x509 -text -in"

alias ..="cd .."
alias ...="cd ../.."

alias rgrep="grep -Rn"
alias history="fc -l 1"

alias gs="git status"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"

alias status="git status"
alias commit="git commit"
alias push="git push"
alias pull="git pull"

alias pebbles="git checkout release/pebbles/master"
alias roxy="git checkout release/roxy/master"
alias stoney="git checkout release/stoney/master"

alias be="bundle exec"

if hash hub 2> /dev/null
then
  alias git="hub"
fi

if hash htop 2> /dev/null
then
  alias top="htop"
fi

if hash colordiff 2> /dev/null
then
  alias diff="colordiff -u"
fi

if hash irssi 2> /dev/null
then
  alias irssi="screen -d -xRR -c ~/.irssi/screenrc -S irssi irssi"
fi

if hash centerim5 2> /dev/null
then
  alias centerim5="screen -d -xRR -c ~/.centerim5/screenrc -S centerim5 centerim5"
fi

function rails() {
  if [ -f Gemfile ]
  then
    bundle exec rails $@
  else
    command rails $@
  fi
}

function cap() {
  if [ -f Gemfile ]
  then
    bundle exec cap $@
  else
    command cap $@
  fi
}

function rake() {
  if [ -f Gemfile ]
  then
    bundle exec rake $@
  else
    command rake $@
  fi
}

function veewee() {
  if [ -f Gemfile ]
  then
    bundle exec veewee $@
  else
    command veewee $@
  fi
}
