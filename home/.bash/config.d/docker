dockercleanc() {
  local clean=$(docker ps -a -q)

  if [[ "${clean}" != "" ]]
  then
    echo "==> Deleting stopped containers"
    echo

    docker rm ${clean}
  fi
}

dockercleani() {
  local clean=$(docker images -q -f dangling=true)

  if [[ "${clean}" != "" ]]
  then
    echo "==> Deleting dangling images"
    echo

    docker rmi ${clean}
  fi
}

dockercleanv() {
  local clean=$(docker volume ls -q -f dangling=true)

  if [[ "${clean}" != "" ]]
  then
    echo "==> Deleting dangling volumes"
    echo

    docker volume rm ${clean}
  fi
}

dockerclean() {
  dockercleanc
  dockercleani
  dockercleanv
}

docker-go() {
  docker run -ti --rm -v $(pwd):$(pwd) -w $(pwd) -e GOPATH webhippie/golang:latest bash
}
