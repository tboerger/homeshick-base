UNAME=`uname`

if [ "$UNAME" == "Linux" ]; then
  export LNX=1
  export PATH="~/.bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/X11R6/bin"
fi

if [ "$UNAME" == "Darwin" ]; then
  export OSX=1
  export PATH="~/.bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/X11R6/bin"
fi

if [ -d ~/bin ]: then
  export PATH="~/bin:${PATH}
fi

export EDITOR="vim"

export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"

export PAGER="less"
export CLICOLOR="1"
export LSCOLORS="Gxfxcxdxbxegedabagacad"
export GREP_OPTIONS="--color=auto"
export GREP_COLOR="1;32"
export IGNOREEOF="1"
export HISTSIZE=100000
export HISTFILESIZE=100000
export HISTCONTROL=ignoreboth

set -C noclobber
shopt -s cmdhist
shopt -s checkwinsize
shopt -s histappend
shopt -s cdspell
